<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D13346"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/teamA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="16dp"
                    android:text="@string/falcons"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="2dp"
                    android:text="@string/_0"
                    android:textSize="56sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:contentDescription="@string/falcons"
                    android:layout_width="93dp"
                    android:layout_height="75dp"
                    android:src="@drawable/falcons"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"/>

            </LinearLayout>



            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="addSixForTeamA"
                android:background="#2A2E36"
                android:textColor="#fff"
                android:text="@string/touchdown"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:onClick="addThreeForTeamA"
                android:text="@string/field_goal"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:onClick="addOneForTeamA"
                android:text="@string/extra_point"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:textColor="#fff"
                android:layout_marginLeft="24dp"
                android:padding="8dp"
                android:background="#2A2E36"
                android:onClick="addTwoForTeamA"
                android:text="@string/safety"
                android:textAllCaps="true" />

        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/darker_gray">-->

        <!--</View>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D13346"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/teamB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="16dp"
                    android:text="@string/Jacksonville"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="1dp"
                    android:text="@string/_00"
                    android:paddingBottom="1dp"
                    android:textSize="56sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:contentDescription="@string/Jacksonville"
                    android:layout_width="107dp"
                    android:layout_height="81dp"
                    android:src="@drawable/jacksonville"
                    android:layout_gravity="center"/>


            </LinearLayout>



            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:onClick="addSixForTeamB"
                android:text="@string/touchdown1"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:onClick="addThreeForTeamB"
                android:text="@string/field_goal1"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:onClick="addOneForTeamB"
                android:text="@string/extra_point2"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:textColor="#fff"
                android:background="#2A2E36"
                android:padding="8dp"
                android:onClick="addTwoForTeamB"
                android:text="@string/safety1"
                android:textAllCaps="true" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="reset"
        android:text="@string/reset"
        android:background="#CCC"
        android:textAllCaps="true" />


</RelativeLayout>



